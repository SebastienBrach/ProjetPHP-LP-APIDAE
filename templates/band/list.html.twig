{% extends 'base.html.twig' %}

{% block body %}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-3 mx-auto my-3">
        <h1 class="display-4 font-weight-normal">Liste des groupes</h1>
        <p class="lead font-weight-normal"><i>Plusieurs groupes se sont produits dans nos salles de concerts</i></p>
    </div>
</div>

{% for message in app.flashes('success') %}
    <div class="container text-center">
        <div class="alert alert-success">
            {{ message }}
        </div>
    </div>
{% endfor %}

    <div class="container">
        <div class="card-deck">
            {% for band in bands %}
            <div class="card">
                <img class="card-img-top" src="{{ asset('images/'~ band.picture) }}" style="height: 300px;">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <a href="{{ path('band_show', {id: band.id}) }}">{{ band.name }}</a>
                    </h5>
                    <center>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit_band', {id: band.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('delete_band', {id: band.id}) }}" class="btn btn-danger">Supprimer</a>
                        {% endif %}
                    </center>
                </div>
            </div>
            {% endfor %}
        </div>
<br><br>

{% if is_granted('ROLE_ADMIN') %}
    <div class="text-center">
        <a href="/bands/form" class="btn btn-primary">Cr√©er un nouveau groupe</a>
    </div>
{% endif %}
</div>

{% endblock %} 